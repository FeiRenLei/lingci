<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
   	xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".ui.activity.MinifeedActivity" >

    <include layout="@layout/base_app_title" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <com.lingci.views.MyScrollView
            android:id="@+id/cmt_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadingEdge="none" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <include layout="@layout/list_item_home" />

                <com.lingci.views.MyListView
                    android:id="@+id/cmt_lv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@null"
                    android:fadingEdge="none" >
                </com.lingci.views.MyListView>
            </LinearLayout>
        </com.lingci.views.MyScrollView>

        <View
            android:id="@+id/mf_mask"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e8e8e8"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp" >

        <com.rockerhieu.emojicon.EmojiconEditText
            android:id="@+id/cmt_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="top|left"
            android:hint="吐槽一下"
            android:inputType="textMultiLine"
            android:maxLength="140"
            android:maxWidth="180dp"
            android:minWidth="15dp"
            android:padding="7dp"
            emojicon:emojiconSize="28sp"
            android:lineSpacingExtra="3dp"
            android:scrollHorizontally="false" />

        <Button
            android:id="@+id/cmt_share"
            android:layout_width="70dp"
            android:layout_height="36dp"
            android:layout_marginLeft="4dp"
            android:textColor="@color/dark_gray"
            android:background="@color/white"
            android:text="发送"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>