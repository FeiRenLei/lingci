<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="5dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/rluser_img"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginRight="12dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/userimg"/>

        <TextView
            android:id="@+id/rl_uname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/rluser_img"
            android:text="@string/app_name"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/rl_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_uname"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/rluser_img"
            android:text="@string/app_name"
            android:textSize="10sp"/>

        <com.lingci.emojicon.EmojiconTextView
            android:id="@+id/rl_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_time"
            android:layout_marginLeft="-3dp"
            android:layout_marginTop="3dp"
            android:lineSpacingExtra="3dp"
            android:padding="5dp"
            android:text="母上养了一只狗，现在不养了，谁要？"
            android:textSize="15sp"
            emojicon:emojiconAlignment="baseline"
            emojicon:emojiconSize="28sp"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/rl_lc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f4f4f4"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/rl_lcuname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="零次"
            android:textColor="@color/aqua_bule"
            android:textSize="12sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="："
            android:textSize="12sp"/>

        <com.lingci.emojicon.EmojiconTextView
            android:id="@+id/rl_minifeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lineSpacingExtra="3dp"
            android:singleLine="true"
            android:text="今天你想说什么梗？"
            android:textSize="12sp"
            emojicon:emojiconAlignment="baseline"/>
    </LinearLayout>

</LinearLayout>