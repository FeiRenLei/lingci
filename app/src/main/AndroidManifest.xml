<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lingci" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".globals.BaseApplication"
        android:allowBackup="true"
        android:anyDensity="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:logo="@android:color/transparent"
        android:theme="@android:style/Theme.Light.NoTitleBar" >
        <activity
            android:name=".ui.activity.WelcomeActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.LoginActivity"
            android:label="@string/title_bar_login" >
        </activity>
        <activity
            android:name=".ui.activity.RegisteActivity"
            android:label="@string/title_bar_reg" >
        </activity>
        <activity
            android:name=".ui.activity.UpdatePwdActivity"
            android:label="@string/title_bar_upwd" >
        </activity>
        <activity
            android:name=".ui.activity.MainActivity"
            android:label="@string/title_bar_index" >
        </activity>
        <activity
            android:name=".ui.activity.MinifeedActivity"
            android:label="@string/title_activity_minifeed" >
        </activity>
        <activity
            android:name=".ui.activity.PersonalInfoActivity"
            android:label="@string/title_activity_personal_info" >
        </activity>
        <activity
            android:name=".ui.activity.AboutActivity"
            android:label="@string/title_activity_about" >
        </activity>
        <activity
            android:name=".ui.activity.RelevantActivity"
            android:label="@string/title_activity_relevant" >
        </activity>
        <activity
            android:name=".ui.activity.ConversationActivity"
            android:label="@string/title_activity_conversation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data
                    android:host="com.lingci"
                    android:pathPrefix="/conversation/"
                    android:scheme="rong" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="LINGCI_APP_KEY"
            android:value="CqYt2014Xyz" />
    </application>

</manifest>
